<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:background="@drawable/item_round">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/homeProdImg_item2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:adjustViewBounds="true"
            android:scaleType = "fitXY"
            android:background="@drawable/item_img_round"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="vertical"
            android:layout_marginLeft="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/homeProdCon_item2"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_margin="2dp"
                    android:text="진행상황"
                    android:textColor="#444444"
                    android:textSize="12dp" />


                <TextView
                    android:id="@+id/farmBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textColor="#444444"
                    android:textSize="12dp"
                    android:layout_gravity="right"
                    android:layout_margin="2dp"
                    android:text=">"/>
            </LinearLayout>
            <TextView
                android:id="@+id/homeProdName_item2"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_margin="2dp"
                android:text="농가명 쓰는 칸"
                android:textColor="#444444"
                android:textSize="12dp" />
            <TextView
                android:id="@+id/homeProdEx_item2"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:textSize="14dp"
                android:layout_margin="2dp"
                android:textColor="@color/black"
                android:text="상품 이름 쓰는 칸"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/pickupDate"
                    android:layout_width="wrap_content"
                    android:layout_height="13dp"
                    android:textColor="#848484"
                    android:textSize="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="2dp"
                    android:text="픽업일"/>

                <TextView
                    android:id="@+id/StoreProdDate2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="1월 25일"
                    android:layout_marginTop="20dp"
                    android:textSize="10dp" />


            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</FrameLayout>