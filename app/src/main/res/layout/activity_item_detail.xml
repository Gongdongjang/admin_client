<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/gotoBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/ic_top_arrow" />

        <TextView
            android:layout_width="212dp"
            android:layout_height="32dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="상세 주문 내역"
            android:textColor="#000000"
            android:textSize="16dp"
            android:textStyle="bold"
            android:maxLines="1"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/profile"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center|right"
            android:layout_weight="1"
            android:src="@drawable/person"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="주문 진행 상황"
            android:textColor="#151515"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="left"
            android:text="픽업 예정일/ 픽업완료"
            android:textColor="#1EAA95"
            android:textSize="12dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:background="@drawable/order_status_bar"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/order_status1"
                android:layout_width="16dp"
                android:layout_height="16dp"

                android:layout_marginLeft="13dp"
                android:background="@drawable/order_status_on"></ImageView>

            <ImageView
                android:id="@+id/order_status2"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/order_status_on"></ImageView>

            <ImageView
                android:id="@+id/order_status3"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/order_status_on"></ImageView>

            <ImageView
                android:id="@+id/order_status4"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/order_status_on"></ImageView>

            <ImageView
                android:id="@+id/order_status5"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/order_status_on"></ImageView>

            <ImageView
                android:id="@+id/order_status6"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginLeft="48dp"
                android:background="@drawable/order_status_on"></ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_order_status1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공동구매 중"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_order_status2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="11dp"
                android:text="공동구매 완료"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_order_status3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:text="상품 준비 중"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_order_status4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="배송 중"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_order_status5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="26dp"
                android:text="스토어 도착"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/txt_order_status6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:text="픽업 완료"
                android:textColor="#A3A3A3"
                android:textSize="10dp" />
        </LinearLayout>

    </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#F6F6F6"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="86dp"
                android:paddingTop="20dp"
                android:paddingLeft="16dp"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="상품 상세정보"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/black"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="현재 우리 스토어에서 진행되고 있는 공동구매 상품 정보입니다."
                    android:textSize="12dp"
                    android:textColor="#A3A3A3"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mdImg2"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:adjustViewBounds="true"
                    android:scaleType = "fitXY"
                    android:background="@drawable/item_img_round"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/farmName2"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:layout_margin="2dp"
                            android:text="농가명 쓰는 칸"
                            android:textColor="#444444"
                            android:textSize="12dp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/mdName2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textSize="14dp"
                        android:layout_margin="2dp"
                        android:textColor="@color/black"
                        android:text="상품 이름 쓰는 칸"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:textColor="#848484"
                            android:textSize="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            android:text="공급 수량"/>

                        <TextView
                            android:id="@+id/goal2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="n세트"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:textSize="10dp" />


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="13dp"
                            android:textColor="#848484"
                            android:textSize="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="2dp"
                            android:text="판매 단위"/>

                        <TextView
                            android:id="@+id/comp2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="10dp"
                            android:text="2000g"
                            android:textSize="10dp" />


                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
</LinearLayout>