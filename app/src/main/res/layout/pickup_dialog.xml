<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dialog_bgd"
    >
<LinearLayout
    android:layout_width="368dp"
    android:layout_height="280dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@drawable/item_round">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingTop="40dp"
        android:paddingLeft="56dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/dName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:text="구매자" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="16dp"

            android:text="님의 픽업을 완료하시겠습니까?" />
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        android:layout_height="100dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:layout_margin="12dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:orientation="horizontal">



                <TextView
                    android:id="@+id/dTime"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:textColor="#444444"
                    android:textSize="12dp"
                    android:layout_gravity="right"
                    android:text="픽업시간"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/dName2"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="left"
                        android:layout_margin="2dp"
                        android:text="구매자 이름"
                        android:textStyle="bold"
                        android:textColor="#151515"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/dMd"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_gravity="left"
                        android:layout_margin="2dp"
                        android:text="상품 이름"
                        android:textStyle="bold"
                        android:textColor="#151515"
                        android:textSize="14dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true">
                    <TextView
                        android:id="@+id/dDone"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textColor="#151515"
                        android:textSize="14dp"
                        android:layout_margin="2dp"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:text="픽업여부"/>
                    <TextView
                        android:id="@+id/dCount"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:textColor="#151515"
                        android:textSize="14dp"
                        android:textStyle="bold"
                        android:layout_gravity="right"
                        android:layout_margin="2dp"
                        android:text="구매 수량"/>
                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/noBtn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/btn_no"
            android:stateListAnimator="@null"
            android:text="아니오"
            android:textColor="#1EAA95"
            android:textSize="16dp"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/yesBtn"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:textSize="16dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:stateListAnimator="@null"
            android:background="@drawable/btn_yes"
            android:text="예" />
    </LinearLayout>
</LinearLayout>


</LinearLayout>
