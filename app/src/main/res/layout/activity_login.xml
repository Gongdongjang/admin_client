<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/login_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <EditText
        android:id="@+id/login_id_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textSize="5pt"
        android:hint="아이디"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/login_logo"/>

    <EditText
        android:id="@+id/login_pwd_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:textSize="5pt"
        android:hint="비밀번호"
        app:layout_constraintStart_toStartOf="@id/login_id_input"
        app:layout_constraintTop_toBottomOf="@id/login_id_input"/>

    <CheckBox
        android:id="@+id/auto_login_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/login_pwd_input"
        app:layout_constraintTop_toBottomOf="@id/login_pwd_input"
        android:text="자동 로그인" />

    <Button
        android:id="@+id/login_process_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="5pt"
        android:text="로그인"
        app:layout_constraintStart_toStartOf="@id/auto_login_check"
        app:layout_constraintTop_toBottomOf="@+id/auto_login_check"/>


</androidx.constraintlayout.widget.ConstraintLayout>